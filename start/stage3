if [ "$(isFirstrun)" == "true" ]
then
   VAR_PGPASSFILE="$(makepwfileforuser "$VAR_USER")"
   /bin/chown $VAR_LINUX_USER:root "$VAR_PGPASSFILE"
   /bin/chmod u=r,go= "$VAR_PGPASSFILE"
fi
