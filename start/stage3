# Set in stage2:
# ---------------------------------------------------------
# set -e +a +m +s +i -f
# . /start/common.functions
# . /start/stage2.functions
# readonly ifs_bak=$IFS
# ---------------------------------------------------------


if [ "$(isFirstrun)" == "true" ]
then
echo firstrun
   /bin/chown :$VAR_LINUX_USER /usr/local/bin/pgagent
   VAR_PGPASSFILE="$(makepwfileforuser "$VAR_USER")"
   /bin/chown $VAR_LINUX_USER:root "$VAR_PGPASSFILE"
   /bin/chmod u=r,go= "$VAR_PGPASSFILE"
else
echo restart
fi
